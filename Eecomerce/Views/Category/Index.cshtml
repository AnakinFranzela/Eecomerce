<a asp-controller="Category" asp-action="Create" class="btn btn-primary mx-2">Add Category</a>

<h1>Category List</h1>
<table id="category-table" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
</table>



@section Scripts {
    <script src="~/js/datatables/datatables.min.js"></script>
    <script>
        function loadDataTable() {
            $("#category-table").DataTable({
                ajax: { url: '/category/get' },
                columns: [
                    { data: 'name', width: '45%' },
                    { data: 'displayOrder', width: '45%' },
                    {
                        data: 'id',
                        render: function (data) {
                            return `<div class=" btn-group" role="group">
                                <a href="/category/update?id=${data}" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <form method="post" action="/category/delete" onsubmit="return confirm('Do you really want to delete category');">
                                @Html.AntiForgeryToken()
                                    <input type="hidden" name="Id" value="${data}" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi-trash"></i>Delete
                                    </button>
                                </form>
                            </div>`;
                        },
                        width: '10%'
                    }
                ]
            }
            );
        }

        $(document).ready(function () {
            loadDataTable();
        })
    </script>
}

